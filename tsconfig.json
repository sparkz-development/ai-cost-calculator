{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "incremental": true
  },
  "include": ["cost/**/*.ts", "llm-mapper/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "**/__tests__/*", "dist"]
}
